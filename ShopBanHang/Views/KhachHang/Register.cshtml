
@{
    ViewBag.Title = "DANG KI TAI KHOAN THANH VIEN";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<div class="container my-4">
    <h1 class="text-center">ĐĂNG KÍ TÀI KHOẢN THÀNH VIÊN</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label><strong>Họ Tên (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="VD: Nguyễn Đình Minh" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Số điện thoại (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="Tên đăng nhập hoặc Email" text="text" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Mật khẩu (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="Mật khẩu khách hàng" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Xác nhận mật khẩu (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="Xác nhận mật khẩu khách hàng" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">ĐĂNG KÍ</button>
            </div>
            <div class="form-group">
                (<span class="text-danger">*</span>)Bắt buộc phải nhập!
            </div>
        </div>
    </div>
</div>

